@{
    ViewData["Title"] = "Pesquisa";
}

<div class="text-center">
    <h3>Testes com Azure Event Hubs</h3>
    <h5>Qual país vencerá a Copa 2022?</h5>
    <br/>
    @Html.ActionLink("Argentina", "VotoArgentina", "Votacao", null, new { @class = "btn btn-info btn-xs" })
    @Html.ActionLink("França", "VotoFranca", "Votacao", null, new { @class = "btn btn-danger btn-xs" })

    @if (!String.IsNullOrWhiteSpace((string)TempData["Voto"]!))
    {
        <br/><br/>
        <p>Obrigado pelo seu voto: <b>@TempData["Voto"]</b></p>
    }
</div>